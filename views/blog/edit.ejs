            <div class="form-group">
               <label for="blogImage">Imagen</label>
               <input type="text" name="image" class="form-control" id="blogImage" value="<%= foundBlog.image %>"></input>
            </div>
            <div class="form-group">
               <label for="blogDescription">Descripci√≥n</label>
               <textarea class="form-control" rows="10" name="description"><%= foundBlog.description %></textarea>
            </div>
               <input type="submit" class="btn btn-danger"></input>
            </div>
         </form>
      </div>
   </div>

</div>

