<% include ../partials/header %>

<div class="container">
   <h2 class="form_mainTitle">Crear un nuevo Post</h2>
   
   <div class="row">
      <div class="form_center">
         <form id="new_form" action="/blogs" method="POST">
            <div class="form-group">
               <label for="blogTitle">Titulo del Blog</label>
               <input type="text" name="blog[name]" placeholder="Type blog title..." class="form-control" id="blogTitle"></input>
            </div>
            <div class="form-group">
               <label for="blogImage">Imagen</label>
               <input type="text" name="blog[image]" placeholder="Coie una Url de Imagen..." class="form-control" id="blogImage"></input>
            </div>
            <div class="form-group">
               <label for="blogDescription">Descripci√≥n</label>
               <textarea class="form-control" rows="10" name="blog[description]" placeholder="Escriba lo que Quiera.." id="blogDescription"></textarea>
            </div>
               <input type="submit" class="btn btn-danger"></input>
            </div>
         </form>
      </div>
   </div>
</div>

